{% extends 'layout.twig' %}

{% block title %} <title> Ajoutez des calories | {{ parent() }} </title> {% endblock %}

{% block icon_img %} <link rel="icon" type="image/png" href="public/favicon.ico"/> {% endblock %}

{% block css_page %}
    <link rel="stylesheet" href="/assets/css/addCalories.css{{ _self.cssVersionning() }}">
{% endblock %}

{% block content %}
    <header>
        <nav>
            <a href="{{ path('homepage') }}"><i class="fa-solid fa-arrow-left"></i></a>
        </nav>
    </header>

    <section class="container-fluid" id="add_calories">
        <div class="banner">
            <img src="assets/img/addCalories/caloriesBanner.jpg" alt="banner">
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12 col-xl-12">
                <h1 class="text-center">Ajouter des calories</h1>
                {{ form_start(form,{'action' : path('addCaloriesPost')}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
